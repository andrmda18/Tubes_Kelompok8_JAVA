<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="600" prefWidth="800">
    <children>
        <!-- Background Image -->
        <Pane layoutX="0" layoutY="0" prefWidth="800" prefHeight="600">
            <children>
                <ImageView fitHeight="600" fitWidth="400" layoutX="0" layoutY="0">
                    <image>
                        <Image url="@food-background.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>

        <!-- Right Panel -->
        <VBox alignment="CENTER" spacing="20" layoutX="400" layoutY="50" prefWidth="400" prefHeight="500">
            <children>
                <!-- Logo -->
                <ImageView fitWidth="80" fitHeight="80">
                    <image>
                        <Image url="@foodie-logo.png" />
                    </image>
                </ImageView>
                <!-- Welcome Text -->
                <Label text="Welcome Back!" style="-fx-font-size: 24px; -fx-text-fill: orange; -fx-font-weight: bold;" />
                
                <!-- Username and Password Fields -->
                <VBox spacing="10">
                    <TextField promptText="Username" />
                    <PasswordField promptText="Kata Sandi" />
                    <Hyperlink text="Lupa Kata Sandi?" style="-fx-text-fill: gray;" />
                </VBox>

                <!-- OR Divider -->
                <HBox alignment="CENTER" spacing="5">
                    <Separator prefWidth="100" />
                    <Label text="ATAU" style="-fx-text-fill: gray;" />
                    <Separator prefWidth="100" />
                </HBox>

                <!-- Google Login Button -->
                <Button text="Masuk dengan Google" style="-fx-background-color: white; -fx-border-color: gray; -fx-padding: 5px 10px;" />

                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Belum punya akun?" style="-fx-text-fill: gray;" />
                    <Hyperlink text="Daftar" style="-fx-text-fill: blue;" />
                </HBox>

                <!-- Login Button -->
                <Button text="MASUK" style="-fx-background-color: #80CFFF; -fx-text-fill: white; -fx-padding: 10px 50px;" />
            </children>
        </VBox>
    </children>
</AnchorPane>

